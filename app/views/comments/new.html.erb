<h1>Comment</h1>

<%= render "partials/error" %>

<%= form_with model: @comment, url: user_post_comments_path(@post), local: true do |form| %>
  <div class="field form-group">
    <%= form.label :text %>
    <%= form.text_area :text, class: "form-control", required: true %>
  </div>
  <br />
  <%= form.submit "Comment", class: "btn btn-primary" %>
<% end %>